@{
    ViewData["Title"] = "Home Page";
}
<header>
    <link rel="stylesheet" href="~/css/button.css" />
</header>
<div class="shell">
<div class="container bg-dark mt-5 button-demo">
    <h3 class="mb-2 button-letter">We offer two option allowing you guys to become a premium user with the following rights:</h3>
    <ul class="button-ul mb-5">
        <li><i class="fa-solid fa-star"></i> None-limited Recipe</li>
        <li><i class="fa-solid fa-star"></i> Be more interactive with the owners</li>
        <li><i class="fa-solid fa-star"></i> Take part in our society</li>
    </ul>
    <div class="d-flex justify-content-center">
        <div class="p-3">
            <a href="#" class="button button--piyo">
                <div class="button__wrapper">
                    <form action="/Package/PaymentWithPaypal" class="button__text" method="get">
                        <input type="hidden" name="packageType" value="monthly" />
                        <input type="submit" value="1 month" />
                    </form>
                </div>
                <div class="characterBox">
                    <div class="character wakeup">
                        <div class="character__face"></div>
                    </div>
                    <div class="character wakeup">
                        <div class="character__face"></div>
                    </div>
                    <div class="character">
                        <div class="character__face"></div>
                    </div>
                </div>
            </a>
        </div>
        <div class="p-3">
            <a href="#" class="button button--hoo">
                <div class="button__wrapper">
                    <form action="/Package/PaymentWithPaypal" class="button__text" method="get">
                        <input type="hidden" name="packageType" value="yearly" />
                        <input type="submit" value="1 year" />
                    </form>
                </div>
                <div class="characterBox">
                    <div class="character wakeup">
                        <div class="character__face"></div>
                        <div class="charactor__face2"></div>
                        <div class="charactor__body"></div>
                    </div>
                    <div class="character wakeup">
                        <div class="character__face"></div>
                        <div class="charactor__face2"></div>
                        <div class="charactor__body"></div>
                    </div>
                    <div class="character">
                        <div class="character__face"></div>
                        <div class="charactor__face2"></div>
                        <div class="charactor__body"></div>
                    </div>
                </div>
            </a>

        </div>
    </div>
</div>
