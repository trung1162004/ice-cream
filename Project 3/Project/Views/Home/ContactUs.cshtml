@model Project.Models.ContactU
@{
    ViewData["Title"] = "Contact Us";
   
}
 
<body>
 
    <div class="shell">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul>
                    @foreach (var key in ViewData.ModelState.Keys)
                    {
                        @foreach (var error in ViewData.ModelState[key].Errors)
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    }
                </ul>
            </div>
        }

        <div class="btn-group btn-breadcrumb">
            <a asp-action="Index" asp-controller="Home" class="btn btn-default"><i class="fas fa-home"></i></a>
            <a asp-action="ContactUs" asp-controller="Home" class="btn btn-default">Contact Us</a>

        </div>
        <div class="container text-center mb-3">

            <span class="span-p">
                Let's Contact Us!
            </span>

            <h1 class="text-center text-dark ad-text1 ">We would like to offer free limit recipes even when you did not register</h1>
        </div>
        <div class="container contact-body">

            <div class="row">
                <div class="col-sm">
                    <ul class="list-unstyled">
                        <li class="mt-5"><i class="fa-solid fa-house contact-icon"></i> <b>Address:</b>  590 Cách mạng tháng 8, quận 3, Tp.Hồ Chí Minh</li>
                        <li class="mt-3"><i class="fa-solid fa-phone contact-icon"></i> <b>Phone:</b>  +312213321321</li>
                        <li class="mt-3"><i class="fa-solid fa-envelope contact-icon"></i> <b>Email:</b>  demo@gmail.com</li>
                    </ul>
                </div>
                <div class="col-sm">
                    <form class="contact-form" asp-action="ContactUs" asp-controller="Home" enctype="multipart/form-data">
                        <span asp-validation-for="Name" class="text-danger"></span>

                        <input asp-for="Name" name="name" type="text" class="contact-input" placeholder="Name" value="@Context.Session.GetString("name")" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <input asp-for="Email" name="email" type="text" class="contact-input" placeholder="Email" value="@Context.Session.GetString("email")" />

                        <span asp-validation-for="Phone" class="text-danger"></span>
                        <input asp-for="Phone" name="phone" type="text" class="contact-input" placeholder="Phone" value="@Context.Session.GetString("phone")" />

                        <span asp-validation-for="Content" class="text-danger"></span>
                        <textarea asp-for="Content" name="content" type="text" class="contact-input contact-area" placeholder="Comment"></textarea>


                        <input type="submit" value="SUBMIT" class="submit-btn-css" />
                    </form>
                </div>

            </div>
        </div>
        <div class="container">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3918.2672651731136!2d106.63274947498002!3d10.867265257511743!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317529f0ae05d8c3%3A0xea475de1cbecf950!2zRC4gVGjhu4sgTcaw4budaSwgUXXhuq1uIDEyLCBUaMOgbmggcGjhu5EgSOG7kyBDaMOtIE1pbmgsIFZp4buHdCBOYW0!5e0!3m2!1svi!2s!4v1701764367228!5m2!1svi!2s" height="400" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
</body> 
 