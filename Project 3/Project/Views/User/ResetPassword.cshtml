@model Project.Models.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Forgot password";
}
<header>
    <link rel="stylesheet" href="~/css/login.css" />
</header>
<div class="shell">
    <div class="row">
        <div class="col-md-6 offset-md-3 login-bg3 p-4">
            <div class="card text-light bg-secondary p-2 text-dark bg-opacity-50">
                <h5 class="text-light text-center login-text">Forgot password</h5>
                <div class="card-body">
                    <form asp-action="ResetPassword">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="UserId" type="hidden" />
                        <input asp-for="Token" type="hidden" />
                        <div class="form-group text-light">
                            <label asp-for="Password" ></label>
                            <input asp-for="Password" class="form-control"  type="password"/>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group text-light">
                            <label asp-for="ConfirmPassword"></label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                      
                        <div class="mt-3 text-center text-light">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-link">Home</a>
                            <button type="submit" class="btn btn-primary">Change password</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
     