@model Project.Models.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change password";
}
}
<header>
    <link rel="stylesheet" href="~/css/login.css" />
</header>
<div class="shell">
    <div class="container">
        <div class="row justify-content-center mt-5 login-bg2">
            <div class="col-md-6 p-3">
                <div class="card text-light bg-secondary p-2 text-dark bg-opacity-50">
                    <h5 class="card-header text-center text-light login-text">Change Password</h5>
                    <div class="card-body text-light">
                        <form asp-action="ChangePassword">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="mb-3">
                                <label asp-for="Password" class="form-label"></label>
                                <input asp-for="Password" class="form-control" type="password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="NewPassword"></label>
                                <input asp-for="NewPassword" class="form-control" type="password" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="NewPasswordConfirm"></label>
                                <input asp-for="NewPasswordConfirm" class="form-control" type="password" />
                                <span asp-validation-for="NewPasswordConfirm" class="text-danger"></span>
                            </div>

                            <div class="mt-3 text-center">
                                <a asp-controller="Home" asp-action="Index" class="btn btn-link">Home</a>
                                <button type="submit" class="btn btn-primary">Change</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
     
